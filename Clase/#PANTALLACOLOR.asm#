;PROGRAMA QUE DESPLIEGA UN CONJUNTO DE ARREGLO EN PANTALLA
ORG 100H  
JMP INICIO

;VECTORES DE DATOS
NOMBRE DB 'AHORA SI, COMPUTOLOGOS...',10,13
       DB 'AHORA SI VEREMOS ALGUNOS RESULTADOS EN PANTALLA',0

INICIO: MOV AH, 00
        MOV AL, 00
        INT 10H     ;SACAR PANTALLA
        MOV DX, 3H 
        MOV SI, 0   ;POSICION DEL VECTOR
        MOV BL, 01H  ;COLOR DE LA LETRA
        
AQUI:   MOV AH, 02
        MOV BH, 00
        INT 10H    ;POSICION EN DONDE INDICA
        MOV AH, 09
        MOV AL, NOMBRE[SI] 
        MOV CX, 1
        INT 10H   ;IMPRIME CON COLOR
        INC SI 
        INC BL
        INC DL
        CMP AL, 0
        JNZ AQUI
        RET
        
